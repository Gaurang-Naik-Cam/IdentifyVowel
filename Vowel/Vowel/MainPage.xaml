<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vowel.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Please enter an Alphabet."
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry
                x:Name="txtbxAlphabet"
                SemanticProperties.Hint="Enter the number !"
                Text=""
                MaxLength="1"
                ClearButtonVisibility="WhileEditing"/>


            <Button
                x:Name="checkVowel"
                Text="Check if its a vowel"
                SemanticProperties.Hint="Vowel Check"
                Clicked="OnClicked"
                HorizontalOptions="Center" />

            <Label
                x:Name="lblOutput"
                Text=""
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
